<Window x:Class="ClipTweet.Windows.TwitterAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Twitter Authorization - ClipTweet" Height="511" Width="572"
        BorderBrush="#39F" BorderThickness="1" ResizeMode="NoResize">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" CornerRadius="3" GlassFrameThickness="1"
                      ResizeBorderThickness="8" UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid x:Name="LayoutRoot">
        <DockPanel>
            <DockPanel DockPanel.Dock="Top" LastChildFill="False" Background="#3399FF" Height="32">
                <Label Foreground="#FFF" FontSize="15" Margin="7,1">Twitter Authorization</Label>
            </DockPanel>
            <WebBrowser x:Name="browser" Navigating="OnNavigating" />
        </DockPanel>
    </Grid>
</Window>
